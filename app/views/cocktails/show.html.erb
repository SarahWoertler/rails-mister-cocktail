<h1><%= @cocktail.name %></h1>

<h3>Ingredients:</h3>
<ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>
      <%= dose.description %>
      <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
</ul>


<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to List", cocktails_path %></p>
